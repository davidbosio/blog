{% extends 'base.html.twig' %}
  {% block title %}
      Inicio
  {% endblock %}
    {% block body %}
        <h1 id="home_tiitle">Inicio</h1>
        <hr>
        {% set contador = 0 %}
        {% if posts is not empty %}
            {% for post in posts %}
                {% if post.estado == 'Activo'%}
                    {% set contador = contador+1 %}
                    <div class="card-body">
                        <div class="col-md-6">
                            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                                <div class="card-body d-flex flex-column align-items-start" id="center">
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        {% if post.author.id == app.user.id %}
                                            <a href="{{ path('update_post', {idPost: post.id}) }}" class="btn btn-primary btn-sm" id="editar">Editar</a>
                                            <a href="#" onclick="return controlBorrado('/posts/delete/{{ post.id }}')" id='eliminar' class="btn btn-primary btn-sm">Eliminar</a>
                                        {% endif %}
                                    {% endif %}
                                    <h3 class="mb-0">
                                        <a class="text-dark" href="{{ path('view_post', {idPost: post.id}) }}">{{post.titulo}}</a>
                                    </h3>
                                    <p class="mb-1 text-muted">{{post.fechaDeCreacion}}</p>
                                    <a href="#" class="text-muted mb-auto">@{{post.author.nombre}}</a>
                                    <p class="card-text mb-auto">{{post.cuerpo}}</p>
                                    <a href="{{ path('view_post', {idPost: post.id}) }}">Continuar leyendo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% if contador == 0%}
                Aun no se ha cargado ningun post
            {% endif %}
        {% else %}
            Aun no se ha cargado ningun post
        {% endif %}
            <div id="paginador">
            <ul class="pagination justify-content-center">
                {% if paginaActual>1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('list_posts', {pagina:paginaActual-1}) }}">Anterior</a>
                    </li>
                {% endif %}

                {% for i in 1..topPaginacion %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('list_posts', {pagina:i}) }}" >{{ i }}</a>
                    </li>
                {% endfor %}

                {% if paginaActual<topPaginacion %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('list_posts', {pagina:paginaActual+1}) }}">Siguiente</a>
                    </li>
                {% endif %}
            </ul>
            </div>
    {% endblock %}