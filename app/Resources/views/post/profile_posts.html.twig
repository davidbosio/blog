{% extends 'base.html.twig' %}
    {% block body %}
        {% for post in posts %}
             <div class="card-body">
              <div class="col-md-6">
               <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start" id="center">
                    {% if post.estado == 'Borrador'%}
                        <strong class="d-inline-block mb-2 text-primary"><i>{{post.estado}}</i></strong>
                        <a href="#" class="btn btn-primary btn-sm" id="publicar">Publicar</a>
                    {% endif %}
                    <a href="{{ path('update_post', {idPost: post.id}) }}" class="btn btn-primary btn-sm" id="editar">Editar</a>
                    <a href="{{ path('delete_post', {idPost: post.id}) }}" class="btn btn-primary btn-sm" id="eliminar">Eliminar</a>
                 <h3 class="mb-0">
                  <a class="text-dark" href="{{ path('view_post', {idPost: post.id}) }}">{{post.titulo}}</a>
                 </h3>
                 <p class="mb-1 text-muted">{{post.fechaDeCreacion}}</p>
                 <p class="card-text mb-auto">{{post.cuerpo|slice(0, 300)~'...'}}</p>
                 <a href="{{ path('view_post', {idPost: post.id}) }}">Continuar leyendo</a>
                </div>
               </div>
              </div>
             </div>
             </div>
        {% endfor %}
    {% endblock %}