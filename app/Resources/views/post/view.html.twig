{% extends 'base.html.twig' %}
 {% block body %}
  <div class="blog-post">
   <h2 class="blog-post-title">{{ post.titulo }}</h2>
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          {% if app.user.nombre == post.author.nombre %}
              <a href="{{ path('update_post', {idPost: post.id}) }}" class="btn btn-primary">Editar</a>
              <a  href="{{ path('delete_post', {idPost: post.id}) }}" class="btn btn-primary">Eliminar</a>
          {% endif %}
      {% endif %}
   <hr>
   <p class="blog-post-meta"><span class="mb-1 text-muted">{{ post.fechaDeCreacion }}</span> Por <a href="#">@{{post.author.nombre}}</a></p>

   <p>{{ post.cuerpo }}</p>
  </div>
 {% endblock %}