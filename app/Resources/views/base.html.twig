<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/mystyle.css') }}" />
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <a class="nav-link" href="{{ path('list_posts') }}">Inicio</a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="nav-link" id="nuevo_post" href="{{ path('create_post') }}">Nuevo Post</a>
                        <a class="nav-link" href="{{ path('profile_posts') }}">Mi perfil</a>
                    {% endif %}
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <ul class="navbar-nav mr-auto">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a class="nav-link" href="/logout">Cerrar Sesion [{{app.user.nombre}}]</a>
                        {% else %}
                            <a class="nav-link" href="/login">Inicar Sesion</a>
                        {% endif %}
                    </ul>
                </form>
            </div>
        </nav>
    </header>
    {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
